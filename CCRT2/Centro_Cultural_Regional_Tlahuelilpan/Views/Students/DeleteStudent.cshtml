@model Centro_Cultural_Regional_Tlahuelilpan.Models.DBCRUDCORE.Alumno
@{
    ViewData["Title"] = "Eliminar Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/views/students/students-delete.css" asp-append-version="true" />
}

<div class="delete-container">
    <h1 class="delete-title">¿Eliminar Alumno?</h1>

    <div class="student-info">
        <div class="student-avatar">
            @Model.Nombre.Substring(0, 1)@Model.ApellidoPaterno.Substring(0, 1)
        </div>
        <h3>@Model.Nombre @Model.ApellidoPaterno @Model.ApellidoMaterno</h3>
        <p>ID: @Model.AlumnoId</p>
        <p>Edad: @Model.Edad años</p>
    </div>

    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> Esta acción eliminará permanentemente al alumno y todos sus registros asociados.
    </div>

    <form asp-action="Confirm_DeleteStudent" method="post">
        <input type="hidden" asp-for="AlumnoId" />

        <div class="delete-actions">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Confirmar Eliminación
            </button>
            <a asp-action="Students" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>