@model Centro_Cultural_Regional_Tlahuelilpan.Models.DBCRUDCORE.Usuario
@{
    ViewData["Title"] = "Eliminar Profesor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/views/teachers/teachers-delete.css" asp-append-version="true" />
}

<div class="form-container">
    <h1 class="danger-title">¿Eliminar Profesor?</h1>

    <form asp-action="Confirm_DeleteTeacher" method="post">
        <input type="hidden" asp-for="UsuarioId" />

        <div class="form-section">
            <h2>Información del Docente</h2>

            <div class="form-group">
                <label>Nombre Completo</label>
                <input value="@(Model.Docente?.Nombre ?? "") @(Model.Docente?.ApellidoPaterno ?? "") @(Model.Docente?.ApellidoMaterno ?? "")"
                       class="form-input" disabled />
            </div>

            <div class="form-group">
                <label>Localidad</label>
                <input value="@(Model.Docente?.Localidad ?? "")" class="form-input" disabled />
            </div>

            <div class="form-group">
                <label>Contacto</label>
                <input value="@(Model.Docente?.NumeroContacto ?? "")" class="form-input" disabled />
            </div>
        </div>

        <div class="form-section">
            <h2>Información de Usuario</h2>

            <div class="form-group">
                <label>Nombre de Usuario</label>
                <input value="@Model.NombreUsuario" class="form-input" disabled />
            </div>

            <div class="form-group">
                <label>Rol</label>
                <input value="@(Model.Rol?.Nombre ?? "")" class="form-input" disabled />
            </div>
        </div>

        @if (TempData?["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Teachers" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>