@model Centro_Cultural_Regional_Tlahuelilpan.Models.ViewModels.LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f5f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            /* Agregar la imagen como fondo */
            background-image: url('/img/centro_cultural.png'); /* Ajusta la ruta según la ubicación de tu imagen */
            background-repeat: no-repeat;
            background-position: top;
            background-size: 90vh; /* Ajusta el tamaño según sea necesario */
            background-opacity: 0; /* Mantén la imagen completamente visible */
            position: relative;
        }

        .login-container {
            max-width: 400px;
            margin: 100px auto;
            padding: 30px;
            background-color: rgba(200, 200, 250, 0.8); /* Capa semi-transparente (ajusta el valor según desees) */
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            position: relative;
            z-index: 1; /* Asegura que el contenedor esté encima del fondo */
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-block {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2 class="text-center mb-4">Iniciar Sesión</h2>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="NombreUsuario"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contraseña"></label>
                <input asp-for="Contraseña" type="password" class="form-control" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RolId"></label>
                <select asp-for="RolId" asp-items="Model.RolesDisponibles" class="form-control">
                </select>
                <span asp-validation-for="RolId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block mt-3">Entrar</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>