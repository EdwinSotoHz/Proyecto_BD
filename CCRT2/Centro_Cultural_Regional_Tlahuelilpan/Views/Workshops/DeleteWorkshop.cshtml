@model Centro_Cultural_Regional_Tlahuelilpan.Models.DBCRUDCORE.Tallere
@{
    ViewData["Title"] = "Eliminar Taller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/views/workshops/workshops-delete.css" asp-append-version="true" />
}

<div class="form-container">
    <h1 class="danger-title">¿Eliminar el taller?</h1>

    <form asp-action="Confirm_DeleteWorkshop" asp-controller="Workshops" method="post">
        <input type="hidden" asp-for="TallerId" />

        <div class="form-group">
            <label>Nombre del Taller</label>
            <input asp-for="NombreTaller" type="text" class="form-input" disabled />
        </div>

        <div class="form-group">
            <label>Descripción</label>
            <textarea asp-for="Descripcion" class="form-input form-textarea" disabled></textarea>
        </div>

        <div class="form-group">
            <label>Precio ($)</label>
            <input asp-for="Precio" type="text" class="form-input" disabled />
        </div>

        <div class="form-group">
            <label>Duración</label>
            <input asp-for="Duracion" type="text" class="form-input" disabled />
        </div>

        @if (!string.IsNullOrEmpty(Model.UrlImagen))
        {
            <div class="form-group">
                <label>Imagen del Taller</label>
                <img src="~/src/img/@Model.UrlImagen" alt="Imagen del taller" class="image-preview" />
            </div>
        }

        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Workshops" asp-controller="Workshops" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>